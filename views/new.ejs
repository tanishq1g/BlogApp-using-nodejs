<% include ./partials/header %>
<div class="container">
    <h2 class="text-center card card-body">New Blog</h2>
    <form style="width:60%; margin: 25px auto" action="/blogs" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="blog[title]" value="title">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="blog[image]" value="image">
        </div>
        <div class="form-group">
            <textarea class="form-control" type="text" name="blog[body]" rows="4">post goes here....</textarea>
        </div>
        <div class="form-group" >
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
    </form>
</div>

