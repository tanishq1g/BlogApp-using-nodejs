<% include ./partials/header %>
<div class="container">
    <h2 class="text-center card card-body">Edit <%= blog.title %></h2>
    <form style="width:60%; margin: 25px auto" action="/blogs/<%= blog._id %>?_method=PUT " method="POST">
        <div class="form-group">
            <label for="">Title</label>
            <input class="form-control" type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="form-group">
            <label for="">Image</label>
            <input class="form-control" type="text" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class="form-group">
            <label for="">Blog Content</label>
            <textarea class="form-control" type="text" name="blog[body]" rows="7"><%= blog.body %></textarea>
        </div>
        <div class="form-group" >
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
    </form>
</div>

<% include ./partials/footer %>
